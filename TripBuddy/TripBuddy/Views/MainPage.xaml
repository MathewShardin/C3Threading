<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBuddy.MainPage"
             BackgroundColor="AliceBlue">
    <ContentPage.MenuBarItems >
        <MenuBarItem
            Text="File">
            <!--the command to connect the button to function-->
            <!--add here backend form teo-->
            <MenuFlyoutItem Text="Save To File" />
            <MenuFlyoutItem Text="Load From File"/>
        </MenuBarItem>

        <MenuBarItem
            Text="Sort">
            <!--the command to connect the button to function-->
            <!--add here backend form teo-->
            <!-- add binding here-->
            <MenuFlyoutItem Text="Price Acending" IconImageSource="arrow.png"/>
            <MenuFlyoutItem Text="Price Decending" IconImageSource="arrow_down.png"/>
            <MenuFlyoutItem Text="Name A-Z"/>
            <MenuFlyoutItem Text="Name Z-A"/>
        </MenuBarItem>

    </ContentPage.MenuBarItems>
    <ContentPage.Content>
        <Grid>
            <!--Grid index start at 0-->
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>



            <VerticalStackLayout
                    Grid.Column="0"
                    Grid.Row="1"
                    Padding="20">

                <Picker
                        x:Name="DestinationStartPicker"
                        Title="Choose A Start"
                        HorizontalOptions="StartAndExpand">
                    <!--Method to select the cities-->
                    <!--<SelectedIndexChanged="OnDestinationSelected">-->
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Paris</x:String>
                            <x:String>London</x:String>
                            <x:String>New York</x:String>
                            <x:String>Tokyo</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>

            <VerticalStackLayout
                        Grid.Column="0"
                        Grid.Row="2"
                        Padding="20"
                       >
                <Picker
                        x:Name="DestinationEndPicker"
                        Title="Select Final Destination"
                        HorizontalOptions="StartAndExpand">
                    <!--Method to select the cities-->
                    <!--<SelectedIndexChanged="OnDestinationSelected">-->
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Paris</x:String>
                            <x:String>London</x:String>
                            <x:String>New York</x:String>
                            <x:String>Tokyo</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

            </VerticalStackLayout>

            <VerticalStackLayout
                Grid.Row="4"
                Grid.Column="0"
                WidthRequest="60">
                
                <Button
                    x:Name="CounterBtn"
                    Text="+" 
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="StartAndExpand" />
            </VerticalStackLayout>

            <VerticalStackLayout
                Grid.Column="1"
                Grid.Row="2">
                <!--https://learn.microsoft.com/en-us/dotnet/maui/user-interface/controls/listview?view=net-maui-8.0-->
                <!--Make the listview for hotels-->
                <ListView ItemsSource="{Binding Hotel}">
                    <ListView.ItemTemplate>
                        <DataTemplate
                            x:DataType="{x:Type model:Hotel}">
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="1"
                                           Grid.Row="0"
                                        Text="{Binding Name}"
                                        FontAttributes="Bold" />
                                        <Label Grid.Row="1"
                                        Grid.Column="1"
                                        Text="{Binding Location}"
                                        FontAttributes="Italic"
                                        VerticalOptions="End" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </VerticalStackLayout>

    </Grid>
    </ContentPage.Content>

</ContentPage>
