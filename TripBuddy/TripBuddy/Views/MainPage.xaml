<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBuddy.Views.MainPage"   
             BackgroundColor="AliceBlue"
             xmlns:viewmodel="clr-namespace:TripBuddy.ViewModel"
             xmlns:model="clr-namespace:TripBuddy.Models"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:DataType="viewmodel:MainPageViewModel">
    <ContentPage.MenuBarItems>
        <MenuBarItem
            Text="File">
            <!--the command to connect the button to function-->
            <!--add here backend form teo-->
            <MenuFlyoutItem Text="Save To File" Clicked="SaveJsonTrip_Click" />
            <MenuFlyoutItem Text="Load From File" Clicked="LoadJsonTrip_Click"/>
        </MenuBarItem>

        <MenuBarItem
            Text="Sort">
            <!--the command to connect the button to function-->
            <!--add here backend form teo-->
            <!--add binding here-->
            <MenuFlyoutItem Text="Price Acending" Clicked="SortByPriceAscending_Click" IconImageSource="arrow.png"/>
            <MenuFlyoutItem Text="Price Decending" Clicked="SortByPriceDescending_Click" IconImageSource="arrow_down.png"/>
            <MenuFlyoutItem Text="Name A-Z" Clicked="SortByHotelNamesAscending_Click"/>
            <MenuFlyoutItem Text="Name Z-A" Clicked="SortByHotelNamesDescending_Click"/>
        </MenuBarItem>

    </ContentPage.MenuBarItems>
    <ContentPage.Content>
        
        <ScrollView>
            <Grid x:Name="LeftGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />

                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>


                <VerticalStackLayout>
                    <Label
                        Text="Plan your Trip here:"
                        FontAttributes="Bold">
                    </Label>
                    <ScrollView VerticalOptions="Start" HeightRequest="225">
                        <VerticalStackLayout x:Name="CitiesContainer">
                        </VerticalStackLayout>
                    </ScrollView>
                    <Button
                         Margin="20,0,0,0"
                         Grid.Column="1"
                         x:Name="CreatePicker"
                         Text="Add new Stop"
                         Clicked="OnClickNewPicker"
                         HorizontalOptions="End"
                        />

                    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ScrollView Grid.Row="1" Orientation="Both" HeightRequest="500">
                            <VerticalStackLayout>
                                <Label
                                    Text="Hotel Prices:"
                                    FontAttributes="Bold"></Label>
                                <micro:ChartView x:Name="chartView" HeightRequest="550" WidthRequest="1000"/>
                            </VerticalStackLayout>
                        </ScrollView>
                    </Grid>
                </VerticalStackLayout>
               

                <VerticalStackLayout Grid.Column="1">
                    <Label
                        Text="Available Hotels:"
                        FontAttributes="Bold"></Label>
                    <Entry x:Name="SearchBar"
                   Placeholder="Search Hotels"
                   TextChanged="OnSearchTextChanged"/>
                </VerticalStackLayout>

                <ScrollView 
                Grid.Column="1" Margin="0,60,0,0" VerticalOptions="Start" HeightRequest="400"
                    >
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Hotels}" 
                                         x:Name="hotels_Available">
                        <!--https://learn.microsoft.com/en-us/dotnet/maui/user-interface/controls/listview?view=net-maui-8.0-->
                        <!--Make the listview for hotels-->
                        <BindableLayout.ItemTemplate >
                            <DataTemplate x:DataType="{x:Type model:Hotel}">
                                <Grid Padding="10">
                                    <Label 
                                    Text="{Binding Name}"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                        >
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Onclicked"/>
                                        </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </ScrollView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
