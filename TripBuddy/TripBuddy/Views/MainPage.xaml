<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBuddy.MainPage"
             BackgroundColor="AliceBlue">
    <ContentPage.MenuBarItems>
        <MenuBarItem
            Text="File">
            <!--the command to connect the button to function-->
            <!--add here backend form teo-->
            <MenuFlyoutItem Text="Save To File" />
            <MenuFlyoutItem Text="Load From File"/>
        </MenuBarItem>

        <MenuBarItem
            Text="Sort">
            <!--the command to connect the button to function-->
            <!--add here backend form teo-->
            <MenuFlyoutItem Text="Price Acending" IconImageSource="arrow.png"/>
            <MenuFlyoutItem Text="Price Decending" IconImageSource="arrow_down.png"/>
            <MenuFlyoutItem Text="Name A-Z"/>
            <MenuFlyoutItem Text="Name Z-A"/>
        </MenuBarItem>

    </ContentPage.MenuBarItems>
    <ScrollView>
        
        <VerticalStackLayout>
            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />

            <Button
            Text="Sort Hotels"
            Clicked="SortHotels_Clicked"
            HorizontalOptions="Fill" />

            <ListView
            x:Name="HotelsListView"
            ItemsSource="{Binding Hotels}"
            HasUnevenRows="true"
            SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" Padding="10">
                                <Label Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="Large" />
                                <Label Text="{Binding Price}"
                                   FontAttributes="Bold"
                                   FontSize="Medium"
                                   HorizontalOptions="End" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
